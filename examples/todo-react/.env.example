# .env.example — copy to .env.local and fill in your values.
# Pass these to the gateway process (or docker run -e ...).
# Never commit .env.local to version control.

# ── Gateway configuration (not injected into the app) ────────────────────────
REP_GATEWAY_PORT=8080
REP_GATEWAY_MODE=embedded
REP_GATEWAY_LOG_FORMAT=text

# ── PUBLIC tier — visible in page source ─────────────────────────────────────
REP_PUBLIC_APP_TITLE=REP Todo
REP_PUBLIC_ENV_NAME=development
REP_PUBLIC_API_URL=http://localhost:3001
REP_PUBLIC_MAX_TODOS=10

# ── SENSITIVE tier — AES-256-GCM encrypted in page source ────────────────────
# The gateway encrypts this at startup. The browser decrypts it via a
# single-use session key fetched from /rep/session-key.
# Use a real key in staging/production. This is a demo placeholder.
REP_SENSITIVE_ANALYTICS_KEY=ak_demo_abc123

# ── SERVER tier — never leaves the gateway process ───────────────────────────
# REP_SERVER_DB_URL=postgres://user:pass@host/db
